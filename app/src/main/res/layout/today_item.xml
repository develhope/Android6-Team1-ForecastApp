<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:id="@+id/linearlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/ora"
            tools:text="@string/today_item_ora"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_weight="1"
            android:fontFamily="@font/inter"
            android:gravity="center"
            android:textColor="@color/todaytext1"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/immaginesole"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_weight="1"
            android:gravity="center"
            app:srcCompat="@drawable/sun" />

        <TextView
            android:id="@+id/gradi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_weight="1"
            android:fontFamily="@font/inter_bold"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="20sp"
            tools:text="@string/today_item_gradi" />

        <ImageView
            android:id="@+id/immaginegoccia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="35dp"
            android:layout_weight="1"
            android:gravity="center"
            app:srcCompat="@drawable/raindrop" />

        <TextView
            android:id="@+id/precipitazioni"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:paddingEnd="35dp"
            android:layout_weight="1"
            android:fontFamily="@font/inter_bold"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="16sp"
            tools:text="0%" />




    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>