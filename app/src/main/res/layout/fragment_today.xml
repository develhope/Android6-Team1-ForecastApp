<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_background"
    tools:context=".today.TodayFragment">

    <TextView
        android:id="@+id/luogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="61dp"
        android:fontFamily="@font/inter"
        android:paddingStart="40dp"
        android:text="@string/today_title_location"
        android:textColor="@color/todaytext1"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/oggi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter"
        android:paddingStart="40dp"
        android:text="@string/today_title_oggi"
        android:textColor="@color/todaytext1"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/luogo"
        app:layout_constraintTop_toBottomOf="@id/luogo" />

    <TextView
        android:id="@+id/tvTodayDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter"
        android:paddingStart="40dp"
        android:text="Domenica 10 settembre"
        android:textColor="@color/todaytext1"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/oggi"
        app:layout_constraintTop_toBottomOf="@+id/oggi" />

    <TextView
        android:id="@+id/clima"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter"
        android:paddingStart="40dp"
        android:paddingTop="20dp"
        android:text="@string/today_title_clima"
        android:textColor="@color/todaytext1"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTodayDate" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/todayscreen"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingHorizontal="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/clima"
        tools:itemCount="12"
        tools:listitem="@layout/today_item" />

</androidx.constraintlayout.widget.ConstraintLayout>